<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fastwriting.controller.MenuController">
    <children>
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="menu-header-section">
            <children>
                <Label styleClass="menu-title-label" text="Fast Writing Game">
                    <font>
                        <Font name="System Bold" size="42.0" />
                    </font>
                </Label>
                <Label fx:id="welcomeLabel" alignment="CENTER" styleClass="menu-welcome-label" text="Welcome to Fast Writing Game!&#10;Test your typing speed and accuracy!" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>

        <!-- Menu Buttons Section -->
        <VBox alignment="CENTER" spacing="25.0" styleClass="menu-buttons-section" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="playButton" onAction="#onPlayButtonClicked" mnemonicParsing="false" prefWidth="250.0" styleClass="menu-play-button" text="Start Game">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>

                <Button fx:id="rulesButton" onAction="#onRulesButtonClicked" mnemonicParsing="false" prefWidth="250.0" styleClass="menu-secondary-button" text="View Rules">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>

                <Button fx:id="exitButton" onAction="#onExitButtonClicked" mnemonicParsing="false" prefWidth="250.0" styleClass="menu-exit-button" text="Exit Game">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="20.0" />
            </padding>
        </VBox>

        <!-- Footer Section -->
        <VBox alignment="CENTER" spacing="10.0" styleClass="menu-footer-section">
            <children>
                <Label styleClass="menu-footer-label" text="Improve your typing skills one word at a time!">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label styleClass="menu-version-label" text="Version 1.0">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="menu-container" />
    </styleClass>
</VBox>