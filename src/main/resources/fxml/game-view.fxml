<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fastwriting.controller.GameController">
    <children>
        <!-- Header Section with Title and Game Info -->
        <VBox alignment="CENTER" spacing="10.0" styleClass="header-section">
            <children>
                <Label styleClass="title-label" text="Fast Writing Game">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Label fx:id="levelLabel" styleClass="info-label" text="Level: 1">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="timerLabel" styleClass="timer-label" text="Time: 20s">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <ProgressBar fx:id="progressBar" prefWidth="400.0" progress="0.02" styleClass="progress-bar" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <!-- Main Game Section -->
        <VBox alignment="CENTER" spacing="25.0" styleClass="game-section" VBox.vgrow="ALWAYS">
            <children>
                <!-- Word Display Area -->
                <VBox alignment="CENTER" spacing="10.0" styleClass="word-display-area">
                    <children>
                        <Label styleClass="instruction-label" text="Type this word or phrase:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="wordDisplayLabel" styleClass="word-display-label" text="Loading..." wrapText="true">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </VBox>

                <!-- Input Section -->
                <VBox alignment="CENTER" spacing="15.0" styleClass="input-section">
                    <children>
                        <TextField fx:id="inputTextField" onKeyPressed="#onKeyPressed" alignment="CENTER" prefWidth="500.0" promptText="Type here and press Enter..." styleClass="input-field">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </TextField>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="submitButton" onAction="#onSubmitButtonClicked" mnemonicParsing="false" prefWidth="100.0" styleClass="submit-button" text="Submit">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="restartButton" onAction="#onRestartButtonClicked" mnemonicParsing="false" prefWidth="100.0" styleClass="restart-button" text="Restart">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="endGameButton" onAction="#onEndGameButtonClicked" mnemonicParsing="false" prefWidth="100.0" styleClass="end-game-button" text="End Game">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <Button fx:id="backToMenuButton" onAction="#onBackToMenuButtonClicked" mnemonicParsing="false" prefWidth="120.0" styleClass="back-to-menu-button" text="Main Menu">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
        </VBox>

        <!-- Feedback Section -->
        <VBox alignment="CENTER" spacing="10.0" styleClass="feedback-section">
            <children>
                <Label fx:id="feedbackLabel" alignment="CENTER" styleClass="feedback-label" text="Welcome! Get ready to type..." textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="25.0" left="30.0" right="30.0" top="15.0" />
            </padding>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="root-container" />
    </styleClass>
</VBox>