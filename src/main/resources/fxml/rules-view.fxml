<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fastwriting.controller.RulesController">
    <children>
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="10.0" styleClass="rules-header-section">
            <children>
                <Label styleClass="rules-title-label" text="Game Rules &amp; Instructions">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label styleClass="rules-subtitle-label" text="Learn how to play Fast Writing Game">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <!-- Rules Content Section -->
        <VBox alignment="CENTER" spacing="15.0" styleClass="rules-content-section" VBox.vgrow="ALWAYS">
            <children>
                <ScrollPane fx:id="rulesScrollPane" fitToWidth="true" prefHeight="400.0" styleClass="rules-scroll-pane">
                    <content>
                        <TextArea fx:id="rulesTextArea" editable="false" prefHeight="400.0" styleClass="rules-text-area" wrapText="true">
                            <font>
                                <Font name="Consolas" size="13.0" />
                            </font>
                        </TextArea>
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="10.0" />
            </padding>
        </VBox>

        <!-- Buttons Section -->
        <VBox alignment="CENTER" spacing="15.0" styleClass="rules-buttons-section">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="startGameButton" onAction="#onStartGameButtonClicked" mnemonicParsing="false" prefWidth="150.0" styleClass="rules-start-button" text="Start Playing">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Button>
                        <Button fx:id="backToMenuButton" onAction="#onBackToMenuButtonClicked" mnemonicParsing="false" prefWidth="150.0" styleClass="rules-back-button" text="Back to Menu">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="rules-container" />
    </styleClass>
</VBox>